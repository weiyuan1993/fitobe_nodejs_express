block fakeLoader
	div(id="fakeLoader")
block loading
	script.
		$("#fakeLoader").fakeLoader({
			timeToHide:9999,
			spinner:"spinner3",
			bgColor:"#F2F2F2", 
		});
		$(window).load(function(){
			$('#fakeLoader').fadeOut();
		})